@page "/user"
@inject HttpClient Http

<h1>English Time Users</h1>

<p>This component is just fetching all English Time user registered.</p>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>JobTitle</th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.JobTitle</td>                    
                </tr>
            }
        </tbody>
    </table>
}
